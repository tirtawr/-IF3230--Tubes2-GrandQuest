<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sister.tirta.clientsister2.InventoryFragment"
    android:background="@drawable/background2">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="83dp"
            android:layout_height="45dp"
            android:text="Back"
            android:id="@+id/back_button_1"
            android:background="@drawable/button"
            android:layout_marginTop="0dp"
            android:layout_gravity="left|right"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="#ffdaaa5f"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:clickable="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_honey"
                    android:src="@drawable/item_honey"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_honey"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_herbs"
                    android:src="@drawable/item_herbs"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_herbs"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_clay"
                    android:src="@drawable/item_clay"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_clay"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_mineral"
                    android:src="@drawable/item_mineral"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_mineral"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="#ffeed08c"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_potion"
                    android:src="@drawable/item_potion"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_potion"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_incense"
                    android:src="@drawable/item_incense"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_incense"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_gems"
                    android:src="@drawable/item_gems"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_gems"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="#ffdaaa5f"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_lifeelixir"
                    android:src="@drawable/item_lifeelixir"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_lifeelixir"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_manacrystal"
                    android:src="@drawable/item_manacrystal"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_manacrystal"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="#FFEED08C"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/item_pstone"
                    android:src="@drawable/item_pstone"
                    android:layout_weight="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:text="3"
                    android:id="@+id/count_pstone"
                    android:background="@drawable/text_field"
                    android:layout_weight="1"
                    android:gravity="fill" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
